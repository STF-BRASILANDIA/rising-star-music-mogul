  "prefer_related_applications": false,
  "related_applications": [],
  
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/x-risingstar-save": [".rssave"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+risingstar",
      "url": "/?action=%s"
    }
  ],
  
  "share_target": {
    "action": "/share-achievement",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "screenshot",
          "accept": ["image/*"]
        }
      ]
    }
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "scope_extensions": [
    {
      "origin": "*.github.io"
    }
  ],
  
  "permissions_policy": {
    "microphone": [],
    "camera": [],
    "geolocation": [],
    "notifications": ["self"],
    "push": ["self"],
    "background-sync": ["self"],
    "periodic-background-sync": ["self"]
  },
  
  "features": [
    "offline",
    "push-notifications", 
    "background-sync",
    "installable",
    "responsive",
    "progressive"
  ],
  
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7"
}
